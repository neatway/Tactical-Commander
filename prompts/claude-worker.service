[Unit]
Description=Claude Code Auto-Worker for Tactical Commander
After=network.target

[Service]
Type=forking
User=claude-worker
ExecStart=/usr/bin/tmux new-session -d -s claude-worker "bash /home/claude-worker/run-claude.sh"
ExecStop=/usr/bin/tmux kill-session -t claude-worker
RemainAfterExit=yes
Restart=on-failure
RestartSec=60

[Install]
WantedBy=multi-user.target
